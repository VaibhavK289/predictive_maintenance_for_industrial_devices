# Enterprise Predictive Maintenance - Environment Variables
# Copy this file to .env and fill in your values

# Google Gemini API Key (required for AI agents)
GOOGLE_API_KEY=your-google-api-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/predictive_maintenance
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=predictive_maintenance
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# ML Model Configuration
ML_MODEL_PATH=./models
ML_RANDOM_STATE=42
ML_MAINTENANCE_COST=2050
ML_FAILURE_COST=10300
ML_ALERT_THRESHOLD=0.3

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=maintenance_docs

# MLflow Configuration
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=predictive_maintenance

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# LLM Configuration
LLM_MODEL_NAME=gemini-1.5-flash
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# CrewAI Configuration
CREWAI_VERBOSE=false
CREWAI_MAX_ITERATIONS=10
